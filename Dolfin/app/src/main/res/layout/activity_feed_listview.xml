<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/babyblue">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        >

        <TextView
            android:id="@+id/achieve"
            android:text="달성률:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="5dp"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/my_achieve"
            android:text="my achieve"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="5dp"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/max_achieve"
            android:text="10.0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            android:textSize="15sp"/>



    </LinearLayout>


    <TextView
        android:id="@+id/feed_title"
        android:text="feed_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"/>
    <TextView
        android:id="@+id/feed_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="feed_name"
        android:layout_gravity="right"
        android:paddingTop="5dp"
        android:paddingRight="10dp"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:gravity="right">
        <TextView
            android:id="@+id/feed_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            android:text="feed_date" />

    </LinearLayout>

    <ImageView
        android:id="@+id/feed_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_launcher_background"
        android:paddingTop="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingRight="10dp"
        >

        <TextView
            android:id="@+id/feed_contents"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:text="feed_contents"
            android:layout_gravity="center"
            android:textSize="17sp" />
        <!--android:background="@color/white"-->
    </LinearLayout>


    <TextView
        android:id="@+id/feed_delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:gravity="right"
        android:text="feed_delete"
        android:paddingBottom="10dp"/>


</LinearLayout>
